<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/frameConfigNizWater"
    android:layout_width="270dp"
    android:layout_height="100dp"
    android:layout_centerInParent="true"
    android:background="#ffffff"
    android:elevation="10dp"
    android:visibility="gone"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageSoSmall"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true"/>

        <Button
            android:id="@+id/buttonViewOkNizWater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textColor="#2196F3"
            android:backgroundTint="#ffffff"
            android:textSize="25sp"
            android:onClick="buttonViewOkNizWaterClick"
            android:text="@android:string/ok"/>

        <EditText
            android:id="@+id/textVolumeNizWater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="95dp"
            android:textColor="#000000"
            android:textSize="35sp"
            android:inputType="number"
            android:maxLength="4"
            android:digits="1234567890"
            android:text="200"/>

        <TextView
            android:id="@+id/textVolumeNizWater2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="16dp"
            android:textColor="#000000"
            android:textSize="35sp"
            android:text="@string/ml"/>

    </RelativeLayout>

</FrameLayout>